{
    "version": 2,
    "builds": [
      {
        "src": "package.json",
        "use": "@vercel/static-build",
        "config": {
          "outputDirectory": "public"
        }
      }
    ],
    "routes": [
      { "src": "/", "dest": "/" },
      { "src": "/api/users", "dest": "/users" },
      { "src": "/api/auth", "dest": "/auth" },
      { "src": "/(.*)", "dest": "/" }
    ]
  }